@model IEnumerable<Olo42.SAROM.WebApp.Models.Operation>

@{
  ViewData["Title"] = Localizer["Einsätze"];

  Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu {
  <partial name="~/Views/Shared/_MenuPartial.cshtml" />
}

<h3>@Localizer["Einsätze"]</h3>

<p>
  <a asp-action="Create">@Localizer["Neuen Einsatz anlegen"]</a> @*|
    <a href="#">@Localizer["Einsatz importieren"]</a>*@
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.AlertDate)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.AlertTime)
      </th>
      <th>@Localizer["Status"]</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @if (item.IsClosed == false)
          {
            <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
          }
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AlertDate)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AlertTime)
        </td>
        <td>
          @(item.IsClosed == true ? @Localizer["abgeschlossen"] : @Localizer["laufend"])
        </td>
      </tr>
    }
  </tbody>
</table>
@section Scripts {
  <script>
    function print(id) {
      window.open("/Operations/Print/" + id, "_blank",
        "menubar=no, toolbar=no, resizable=no, top=100, left=200, width=800, height=1024");
    };
  </script>
}