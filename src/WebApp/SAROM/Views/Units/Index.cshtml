@model IEnumerable<SAROM.Models.Unit>

@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@Localizer["Einsatzkräfte"]</h3>

<p>
  <a asp-action="Create" asp-route-id="@ViewBag.OperationId">@Localizer["Erfassen"]</a> |
  <a asp-action="Details" asp-controller="Operations" asp-route-id="@ViewBag.OperationId">@Localizer["zurück"]</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.PagerNumber)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.PagerNumber)
        </td>
        <td>
          <a asp-action="Details" asp-route-id="@item.Id">@Localizer["anzeigen"]</a> |
          <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["bearbeiten"]</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["löschen"]</a>
        </td>
      </tr>
    }
  </tbody>
</table>
