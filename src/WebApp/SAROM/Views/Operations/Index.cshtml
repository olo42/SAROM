@model IEnumerable<SAROM.Models.Operation>

@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Operations</h3>

<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.AlertDate)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.AlertTime)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.IsClosed)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.AlertDate)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.AlertTime)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.IsClosed)
      </td>
      <td align="right">
        @if (item.IsClosed != true)
        {
          <a asp-action="Close" asp-route-id="@item.Id"> Close</a>
        }
        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
      </td>
    </tr>
    }
  </tbody>
</table>
